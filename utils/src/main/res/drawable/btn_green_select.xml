<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="@dimen/x10"
                     android:bottomRightRadius="@dimen/x10"
                     android:radius="@dimen/x10"
                     android:topLeftRadius="@dimen/x10"
                     android:topRightRadius="@dimen/x10" />
            <solid android:color="@color/main_color" />
            <stroke android:width="@dimen/x2" android:color="@color/main_color" />
        </shape>

    </item>
        
    <item android:state_enabled="false">
        <shape>
            <corners android:bottomLeftRadius="@dimen/x10"
                android:bottomRightRadius="@dimen/x10"
                android:radius="9dp"
                android:topLeftRadius="@dimen/x10"
                android:topRightRadius="@dimen/x10" />
            <solid android:color="@color/canclick_hui" />
            <stroke android:width="@dimen/x4" android:color="@color/canclick_hui" />
        </shape>
    </item>

    <item>
        <shape>
                <corners android:bottomLeftRadius="@dimen/x10"
                    android:bottomRightRadius="@dimen/x10"
                    android:radius="@dimen/x10"
                    android:topLeftRadius="@dimen/x10"
                    android:topRightRadius="@dimen/x10" />
                <solid android:color="@color/main_color" />
                <stroke android:width="@dimen/x10" android:color="@color/main_color" />
        </shape>
    </item>

</selector>