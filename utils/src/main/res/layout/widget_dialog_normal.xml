<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_corner8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_white_corner8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_normal_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_dialog_title_bg"
            android:gravity="center"
            android:lines="1"
            android:text="温馨提示"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_below="@+id/dialog_normal_title"
            android:background="@color/main_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dialog_normal_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingLeft="@dimen/y20"
                android:paddingRight="@dimen/y20"
                android:textSize="@dimen/y28" />

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="0"
        android:background="#DEDEDE" />

    <Button
        android:id="@+id/dialog_normal_midbtn"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_weight="0"
        android:background="@drawable/selector_widget_dialog_midbtn"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_normal_leftbtn"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/selector_widget_dialog_leftbtn"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_normal_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#DEDEDE" />

        <Button
            android:id="@+id/dialog_normal_rightbtn"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/selector_widget_dialog_rightbtn"
            android:gravity="center"
            android:textColor="#0CC0A1"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>