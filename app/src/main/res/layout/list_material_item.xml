<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="@dimen/y80"
    android:orientation="horizontal">

    <Button
        android:id="@+id/materialName"
        style="@style/ContentSmallTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/y5"
        android:background="@null"
        android:clickable="false"
        android:focusable="false"
        android:text="食材"
        android:textColor="@drawable/categoty_item" />

    <Button
        android:id="@+id/materialValue"
        style="@style/ContentSmallHuiTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/y5"
        android:background="@null"
        android:clickable="false"

        android:focusable="false"
        android:text="z重量" />

</LinearLayout>

