<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GuaguaToolBar">
        <attr name="tool_bar_isTransparent" format="boolean" />
        <attr name="tool_bar_title_isTransparent" format="boolean" />
        <attr name="tool_bar_left_text_isTransparent" format="boolean"/>
        <attr name="tool_bar_title" format="string|reference" />
        <attr name="tool_bar_left_text" format="string|reference"/>
        <attr name="tool_bar_right_image_btn_1" format="reference" />
        <attr name="tool_bar_right_image_btn_2" format="reference" />
        <attr name="tool_bar_left_image_btn" format="reference" />
        <attr name="tool_bar_left_btn_text" format="string|reference" />
        <attr name="tool_bar_right_btn_text" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="SlideDetailsLayout">
        <!-- float value for indicate the moment of switch panel-->
        <attr name="percent" format="float"/>
        <!-- how long the animation keep-->
        <attr name="duration" format="integer"/>
        <!-- default panel to show after init-->
        <attr name="default_panel" format="enum">
            <enum name="front" value="0"/>
            <enum name="behind" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="HorizontalNavigationBar">
        <!--可见的数目 -->
        <attr name="HorizontalNavigationBarSeeSize" format="integer"></attr>


        <!--被选中的文字的大小和颜色-->
        <attr name="HorizontalNavigationBarSelectedTextSize" format="float"></attr>
        <attr name="HorizontalNavigationBarSelectedTextColor" format="color|reference"></attr>

        <!--未被选中的文字的大小和颜色-->
        <attr name="HorizontalNavigationBarTextSize" format="float"></attr>
        <attr name="HorizontalNavigationBarTextColor" format="color|reference"></attr>
    </declare-styleable>





    <declare-styleable name="ImageViewWithText">

        <attr name="text_pic" format="reference" />
        <attr name="text_detail" format="string" />

    </declare-styleable>



</resources>