<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--标题字体-->
    <style name="TitleTextSize">
        <item name="android:textSize">@dimen/y30</item>
        <item name="android:textColor">@color/black_light</item>
    </style>
    <!--正文字体-->
    <style name="ContentTextSize">
        <item name="android:textSize">@dimen/y28</item>
        <item name="android:textColor">@color/black_light</item>
    </style>
    <!--正文字体-->
    <style name="ContentSmallTextSize">
        <item name="android:textSize">@dimen/y26</item>
        <item name="android:textColor">@color/black_light</item>
    </style>
    <!--正文字体灰色-->
    <style name="ContentSmallHuiTextSize">
        <item name="android:textSize">@dimen/y24</item>
        <item name="android:textColor">@color/text_weak</item>
    </style>
    <!--超大字体-->
    <style name="ContentLargeTextSize">
        <item name="android:textSize">@dimen/y50</item>
        <item name="android:textColor">@color/black_light</item>
    </style>
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/y30</item>
        <item name="android:textColor">@color/text_weak</item>
    </style>


</resources>
